{
    "manifest_version": 2,
    "name": "Donate and Smile",
    "version": "0.1.0",
    "author": "Sublime Fund Inc.",
    "description": "Automatically redirect from Amazon to AmazonSmile.",
    "homepage_url": "https://sublimefund.org",
    "applications": {
        "gecko": {
            "id": "donate-and-smile@sublimefund.org"
        }
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "browser_style": true,
        "chrome_style": true,
        "default_icon": "images/icon-128.png",
        "default_popup": "toggle.html"
    },
    "options_ui": {
        "browser_style": true,
        "chrome_style": true,
        "page": "toggle.html"
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "https://*.amazon.com/"
    ]
}

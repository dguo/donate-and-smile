{
    "manifest_version": 2,
    "name": "Donate and Smile",
    "version": "0.1.0",
    "author": "Sublime Fund Inc.",
    "description": "Automatically redirect from Amazon to AmazonSmile.",
    "homepage_url": "https://sublimefund.org",
    "applications": {
        "gecko": {
            "id": "donate-and-smile@sublimefund.org"
        }
    },
    "icons": {
        "48": "images/icon.png",
        "96": "images/icon@2x.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["webRequest", "webRequestBlocking", "https://*.amazon.com/"]
}
